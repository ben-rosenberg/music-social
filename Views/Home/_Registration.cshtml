@model User

<div class="card">
    <div class="card-body">
        <h1 class="text-center">Register</h1>
        <form asp-controller="Home" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="LastName">
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Username">
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="ConfirmPassword">
            </div>
            <input type="submit" value="Register">
        </form>
    </div>
</div>